<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".controllers.ArtistPage"
        android:background="@drawable/gradient_background"
        android:theme="@style/AppTheme.NoActionBar" android:minWidth="1200dp" android:maxWidth="1900dp">
    <TextView
            android:text="TextView"
            android:id="@+id/artist_list_textView"
            android:layout_width="418dp"
            android:layout_height="68dp"
            android:layout_marginTop="60dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/fans_textView2" app:layout_constraintVertical_bias="0.06"
            app:layout_constraintVertical_chainStyle="packed" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.0"
            android:textAppearance="@style/TextAppearance.AppCompat" android:textSize="40sp"
            android:textAlignment="center" android:fontFamily="monospace"
            android:textColor="@android:color/black" android:textStyle="bold"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="112dp" android:id="@+id/link_textView5"
            android:textColor="@android:color/black" android:textSize="30sp" android:clickable="true"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/albumRecyclerView"
            app:layout_constraintStart_toEndOf="@+id/artist_imageView"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/fans_textView2"
            android:textColor="@android:color/black"
            android:textSize="30sp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toEndOf="@+id/artist_imageView"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginBottom="12dp" app:layout_constraintBottom_toTopOf="@+id/nb_albums_textView3"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/artist_list_textView"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:id="@+id/nb_albums_textView3" android:textColor="@android:color/black"
            android:layout_height="0dp"
            android:textSize="30sp" android:layout_marginBottom="8dp"
            android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintStart_toEndOf="@+id/artist_imageView"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/fans_textView2"
            app:layout_constraintBottom_toTopOf="@+id/link_textView5"/>
    <ImageView
            android:layout_width="379dp"
            android:layout_height="376dp" tools:src="@tools:sample/avatars"
            android:id="@+id/artist_imageView" android:layout_marginTop="128dp"
            android:padding="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="28dp"/>
    <android.support.v7.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="495dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:id="@+id/albumRecyclerView"
            android:padding="20dp" android:paddingEnd="0dp" android:paddingLeft="20dp" android:paddingRight="20dp"
            android:paddingStart="0dp" android:paddingTop="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:paddingBottom="50dp" android:layout_marginBottom="36dp" app:layout_constraintHorizontal_bias="0.0"
    >
    </android.support.v7.widget.RecyclerView>
</android.support.constraint.ConstraintLayout>