<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".controllers.ArtistPage"
        android:background="@drawable/gradient_background"
        android:theme="@style/AppTheme.NoActionBar">
    <ScrollView
            android:layout_width="298dp"
            android:layout_height="223dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/albumRecyclerView"
            app:layout_constraintStart_toEndOf="@+id/artist_imageView" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.239"
            android:id="@+id/ScrollView">
        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                      android:orientation="vertical">
            <TextView
                    android:text="TextView"
                    android:id="@+id/artist_list_textView"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" android:textAlignment="center"
                    android:textSize="36sp" android:layout_width="match_parent" tools:layout_editor_absoluteY="126dp"
                    tools:layout_editor_absoluteX="166dp" android:layout_height="wrap_content"
                    android:fontFamily="sans-serif" android:textAllCaps="false"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:id="@+id/nb_albums_textView3" android:textColor="@android:color/black"
                    android:layout_height="28dp"
                    app:layout_constraintStart_toStartOf="@+id/scrollView" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="@+id/scrollView" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="@+id/fans_textView2" app:layout_constraintVertical_bias="0.426"
                    android:textSize="24sp"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="33dp"
                    android:id="@+id/fans_textView2" app:layout_constraintEnd_toEndOf="@+id/scrollView"
                    app:layout_constraintStart_toStartOf="@+id/scrollView"
                    app:layout_constraintBottom_toBottomOf="@+id/scrollView"
                    app:layout_constraintTop_toTopOf="@+id/scrollView" android:textColor="@android:color/black"
                    app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.354"
                    android:layout_marginBottom="2dp" android:textSize="24sp"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="85dp" android:id="@+id/link_textView5"
                    android:textColor="@android:color/black" android:textSize="24sp" android:clickable="true"/>
        </LinearLayout>
    </ScrollView>
    <ImageView
            android:layout_width="248dp"
            android:layout_height="330dp" tools:src="@tools:sample/avatars"
            android:id="@+id/artist_imageView" android:layout_marginTop="8dp"
            android:padding="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.045"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/albumRecyclerView"
            app:layout_constraintVertical_bias="0.109"/>
    <android.support.v7.widget.RecyclerView
            android:layout_width="539dp"
            android:layout_height="527dp"
            android:layout_marginBottom="4dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.511"
            android:id="@+id/albumRecyclerView"
            android:padding="5dp" android:paddingEnd="15dp" android:paddingLeft="16dp" android:paddingRight="15dp"
            android:paddingStart="16dp" android:paddingTop="0dp">
    </android.support.v7.widget.RecyclerView>
</android.support.constraint.ConstraintLayout>