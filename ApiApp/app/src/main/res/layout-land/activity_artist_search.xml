<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".controllers.ArtistSearch"
        android:background="@drawable/gradient_background"
        android:theme="@style/AppTheme.NoActionBar">

    <EditText
            android:layout_width="490dp"
            android:layout_height="47dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/SearchBar"
            android:hint="Artist Name" android:textAlignment="center"
            app:layout_constraintStart_toEndOf="@+id/DeezerPicture"
            android:textColor="@android:color/black"
            tools:verticalScrollbarPosition="left" android:layout_marginStart="28dp" android:layout_marginTop="44dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
            android:src="@drawable/deezer_logo_circle"
            android:layout_width="216dp"
            android:layout_height="142dp"
            android:id="@+id/DeezerPicture"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.028" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" tools:visibility="visible"
            app:srcCompat="@drawable/deezer_logo_circle" android:scaleType="fitCenter" android:visibility="visible"
            tools:srcCompat="@drawable/deezer_logo_circle" android:layout_marginTop="44dp"/>
    <android.support.v7.widget.RecyclerView
            android:layout_width="458dp"
            android:layout_height="233dp" android:layout_marginTop="16dp"
            android:padding="0dp"
            app:layout_constraintTop_toBottomOf="@+id/SearchBar" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.877" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp" android:layout_marginEnd="16dp" android:id="@+id/artistRecyclerView"
            app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:text=" API"
            android:layout_width="207dp"
            android:layout_height="60dp"
            android:id="@+id/textView" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="32dp"
            app:layout_constraintHorizontal_bias="0.03" app:layout_constraintTop_toBottomOf="@+id/DeezerPicture"
            android:textAppearance="@style/TextAppearance.AppCompat.Title" android:textAlignment="center"
            android:textSize="36sp" android:textStyle="bold"/>
</android.support.constraint.ConstraintLayout>