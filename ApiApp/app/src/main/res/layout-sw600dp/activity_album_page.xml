<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".controllers.AlbumPage"
        android:background="@drawable/gradient_background">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content" tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/album_imageView" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/trackRecyclerView" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintVertical_bias="0.734"
            app:layout_constraintEnd_toStartOf="@+id/album_textView" android:layout_marginEnd="8dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/album_textView"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/trackRecyclerView"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.614"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/album_imageView"
            app:layout_constraintVertical_bias="0.237" android:textSize="50sp"
            android:textColor="@android:color/black" android:textStyle="bold" android:textAlignment="textStart"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/release_date_textView3"
            android:textSize="30sp"
            android:textColor="@android:color/black"
            app:layout_constraintStart_toEndOf="@+id/album_imageView" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/album_textView" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/trackRecyclerView" app:layout_constraintHorizontal_bias="0.611"
            app:layout_constraintVertical_bias="0.225"/>
    <android.support.v7.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/trackRecyclerView" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/album_imageView">
    </android.support.v7.widget.RecyclerView>
</android.support.constraint.ConstraintLayout>