<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".controllers.AlbumPage"
        android:background="@drawable/gradient_background">

    <ImageView
            android:layout_width="149dp"
            android:layout_height="140dp" tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/album_imageView" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/trackRecyclerView" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:text="TextView"
            android:layout_width="177dp"
            android:layout_height="134dp"
            android:id="@+id/album_textView"
            android:layout_marginTop="8dp"
            android:textSize="24sp"
            android:textColor="@android:color/black" android:textStyle="bold" android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@+id/album_imageView"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="4dp" app:layout_constraintEnd_toStartOf="@+id/trackRecyclerView"
            app:layout_constraintVertical_bias="0.243"/>
    <android.support.v7.widget.RecyclerView
            android:layout_width="572dp"
            android:layout_height="311dp"
            android:id="@+id/trackRecyclerView"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.941"
            android:layout_marginBottom="16dp"/>
</android.support.constraint.ConstraintLayout>